@using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-signin" }))
{
    

    <h2 class="form-signin-heading">Aanmelden</h2>
    <label for="Email" class="sr-only">Email address</label>
    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email address", @type = "email" })

    <label for="Passord" class="sr-only">Paswoord</label>
    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Paswoord" ,@type="password" })
    <button class="btn btn-lg btn-primary btn-block" type="submit">Aanmelden</button>
    
    @Html.ValidationSummary(true)
